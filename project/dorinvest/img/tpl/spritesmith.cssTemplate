{{#items}}

.icon-{{name}}{
	position: relative;
}

.icon-{{name}}:before{
	content:"";
	display: inline-block;
	background-image: url({{{escaped_image}}});
	background-position: {{px.offset_x}} {{px.offset_y}};
	width: {{px.width}};
	height: {{px.height}};
	position: absolute;
	top: 50%;
	left: 0;
	-webkit-transform: translateY(-50%);
	-ms-transform: translateY(-50%);
	transform: translateY(-50%);
}
{{/items}}